@page
@model duandautienx.Pages.FormbindingModel
@{
    ViewData["Title"] = "FromBinDing";
    var method = Request.Method.ToUpper();
}

@if (method == "GET"){ 
    <form class="center border border-light p-3 w-50" method="post">
        <div class="text-center">
            <p class="h4 mb-4">Subsribe</p>
            <p>...</p>
        </div>
        <input name="fullname" type="text" placeholder="name" class="form-control mb-2" />
        <input name="email" type="email" placeholder="email" class="form-control mb-2" />
        <input name="age" type="number" placeholder="age" class="form-control mb-2" />
        <button type="submit" class="btn btn-info btn-block">Register</button>
    </form> 
}
            else if (method == "POST"){ 
    <div class="center text-center border border-success">
        <p class="h5">@Model.Message</p>
    </div>
}